<!DOCTYPE html>
<html>
<head>
  <title>Submit request</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f9;
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      height: 100vh;
    }
    h1 {
      color: #333;
      text-align: center;
    }
    form {
      background: #fff;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      display: flex;
      flex-direction: column;
    }
    label {
      display: block;
      margin-bottom: 10px;
      font-weight: bold;
      text-align: center;
    }
    textarea {
      
      padding: 10px;
      border-radius: 4px;
      border: 1px solid #ccc;
      margin-bottom: 20px;
    }
    button {
      background: #28a745;
      color: #fff;
      padding: 10px 15px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
    button:hover {
      background: #218838;
    }
    #countdown {
      display: none;
      margin-top: 20px;
      font-size: 20px;
      color: #dc3545;
    }
  </style>
</head>
<body>
  <h1>AI powered <br> Client request analyzer</h1>
  <form id="emailForm" action="/submit-email" method="POST">
    <label for="email">Enter the client's request and wait the result.</label>
    <textarea name="email" rows="10" cols="50"></textarea>
    <button type="submit">Submit</button>
  </form>
  <div id="countdown"></div>
  
  <script>
    document.getElementById('emailForm').addEventListener('submit', function(event) {
      startCountdown();
    });

    function startCountdown() {
      var countdownElement = document.getElementById('countdown');
      var timeLeft = 10 * 60; // 10 minutes in seconds
      countdownElement.style.display = 'block';

      var countdownTimer = setInterval(function() {
        var minutes = Math.floor(timeLeft / 60);
        var seconds = timeLeft % 60;

        seconds = seconds < 10 ? '0' + seconds : seconds;
        countdownElement.textContent = minutes + ':' + seconds;

        timeLeft--;

        if (timeLeft < 0) {
          clearInterval(countdownTimer);
          countdownElement.textContent = 'Time is up! The results should be here soon. :)';
        }
      }, 1000);
    }
  </script>
</body>
</html>
